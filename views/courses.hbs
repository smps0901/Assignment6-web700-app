<div class="container">
    <div class="row">
        <div class="col-md-12">
            <br>
            <h2>Courses</h2>
    <a href="/courses/add" class="btn btn-success float-end">Add New Course</a>
    {{#if courses.length}}
        <table>
            <thead>
                <tr>
                    <th>Course Code</th>
                    <th>Course Description</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each courses}}
                <tr>
                    <td><a href="/course/{{this.courseId}}">{{this.courseCode}}</a></td>
                    <td><a href="/students?course={{this.courseId}}">{{this.courseDescription}}</a></td>
                    <td><a href="/course/delete/{{this.courseId}}" class="btn btn-danger">Remove</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    {{else}}
        <p>No courses available</p>
    {{/if}}
        </div>
    </div>
</div>

