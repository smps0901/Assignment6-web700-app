<div class="container">
        <div class="row">
            <main class="col-md-12">
                <form action="/students/add" method="POST">
                    <fieldset>
                        <legend class="legend">Personal Information</legend>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="firstName">First Name:</label>
                                    <input class="form-control" id="firstName" name="firstName" type="text" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="lastName">Last Name:</label>
                                    <input class="form-control" id="lastName" name="lastName" type="text" required />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="email">Email:</label>
                                    <input class="form-control" id="email" name="email" type="email" required />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="addressStreet">Address (Street):</label>
                                    <input class="form-control" id="addressStreet" name="addressStreet" type="text" required />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="addressCity">Address (City):</label>
                                    <input class="form-control" id="addressCity" name="addressCity" type="text" required />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="addressProvince">Address (Province):</label>
                                    <input class="form-control" id="addressProvince" name="addressProvince" type="text" required />
                                </div>
                            </div>
                        </div>
                    </fieldset>
                    <fieldset>
                        <legend class="legend">Academic Information</legend>
                        <div class="row">
                            <div class="col-md-4">
                                <label>College Employment:</label><br />
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="TA" name="TA">
                                    <label class="form-check-label" for="TA">
                                        Teaching Assistant
                                    </label>
                                </div>
                                <br />
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Enrollment Status:</label><br />
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" id="fullTime" name="status" value="Full Time" required />
                                        <label class="form-check-label" for="fullTime">Full Time</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" id="partTime" name="status" value="Part Time" required />
                                        <label class="form-check-label" for="partTime">Part Time</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="course">Enrolled in Course:</label>
                                    <select class="form-control" id="course" name="course" required>
                                        <option value="">Select Course</option>
                                        {{#each courses}}
                                            <option value="{{this.courseId}}">{{this.courseDescription}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                    <hr />
                    <input type="submit" class="btn btn-primary float-right" value="Add Student" />
                    <input type="reset" class="btn btn-primary float-right" value="Reset Form" style="background-color: red; border-color: red; color: white;" />
                </form>
            </main>
        </div>
    </div>