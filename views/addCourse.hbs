<div class="container">
        <h1 class="mt-5">Add Course</h1>
        <form action="/courses/add" method="POST" class="mt-3">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="courseCode">Course Code</label>
                    <input type="text" name="courseCode" id="courseCode" class="form-control" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="courseDescription">Course Description</label>
                    <input type="text" name="courseDescription" id="courseDescription" class="form-control" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary float-right">Add Course</button>
        </form>
    </div>
